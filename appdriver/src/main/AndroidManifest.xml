<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permisos para conexión a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Permisos para ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Permiso para cámara (escaneo QR) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Permisos para Wear OS -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logodvr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logodvr"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrailynApp"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        
        <!-- Splash Activity as launcher -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TrailynApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Welcome Activity -->
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Login Activity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.welcome.WelcomeActivity" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Trip Detail Activity with Map -->
        <activity
            android:name=".ui.trips.TripDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        
        <!-- Navigation Activity -->
        <activity
            android:name=".ui.navigation.NavigationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.trips.TripDetailActivity" />
        
        <!-- QR Scanner Activity -->
        <activity
            android:name=".ui.qr.QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.navigation.NavigationActivity" />
        
        <!-- Wear OS Data Listener Service -->
        <service
            android:name=".services.WearableDataListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data
                    android:scheme="wear"
                    android:host="*"
                    android:pathPrefix="/health_data" />
            </intent-filter>
        </service>
            
    </application>

</manifest>