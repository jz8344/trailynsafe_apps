<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.navigation.NavigationActivity">

    <!-- Mapa en vista completa -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Panel superior con informaciÃ³n de ruta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRouteInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRutaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruta Viaje #5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDistanciaTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6.81 km"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_my_location"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tvTiempoEstimado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20 min"
                    android:textSize="14sp"
                    android:drawablePadding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Panel inferior con instrucciones y acciones -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/layoutInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- InformaciÃ³n de siguiente parada -->
            <TextView
                android:id="@+id/tvNextStopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Siguiente Parada (1/3)\nC. Flaviano Ramos Sur 33\nâ° Hora estimada: 10:03\nðŸ“ 3.45 km"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_primary" />

            <!-- BotÃ³n Comenzar Viaje (DEPRECADO - auto-inicio) -->
            <Button
                android:id="@+id/btnStartTrip"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="ðŸš€ Comenzar Viaje"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/gradient_primary"
                android:visibility="gone" />

            <!-- BotÃ³n Completar Parada -->
            <Button
                android:id="@+id/btnCompleteStop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="âœ“ Completar Parada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/gradient_primary"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- FAB Mi UbicaciÃ³n -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_my_location"
        android:contentDescription="Mi ubicaciÃ³n"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary" />

    <!-- FAB Recentrar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_arrow_forward"
        android:contentDescription="Recentrar en ruta"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary"
        app:fabSize="mini" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
