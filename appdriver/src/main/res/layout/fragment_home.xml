<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/m3_surface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- HEADER - Saludo Google Style -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TrailynSafe Conductor"
                    android:textColor="@color/m3_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvSaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola,"
                    android:textColor="@color/m3_on_surface_variant"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvNombreChofer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conductor"
                    android:textColor="@color/m3_on_surface"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- CARD ESTADO ACTUAL -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/m3_surface_container_high"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estado Actual"
                            android:textColor="@color/m3_on_surface"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/viewEstadoIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/m3_success" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/m3_outline_variant" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponible"
                        android:textColor="@color/m3_success"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- ACCIONES RÁPIDAS -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accesos Rápidos"
                android:textColor="@color/m3_on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Card Mis Viajes -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMisViajes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/m3_surface_container_high"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_chip_m3">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_trips"
                                app:tint="@color/m3_primary" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mis Viajes"
                            android:textColor="@color/m3_on_surface"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Mi Perfil -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMiPerfil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/m3_surface_container_high"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_chip_m3">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_profile"
                                app:tint="@color/google_teal" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mi Perfil"
                            android:textColor="@color/m3_on_surface"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- INFORMACIÓN ADICIONAL -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/m3_primary_container"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trips"
                        app:tint="@color/m3_on_primary_container" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Listo para conducir"
                            android:textColor="@color/m3_on_primary_container"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revisa tus viajes asignados para hoy"
                            android:textColor="@color/m3_on_primary_container"
                            android:textSize="13sp"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
