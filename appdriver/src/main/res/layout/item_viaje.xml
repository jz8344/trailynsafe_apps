<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/m3_surface_container_high"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono de viaje -->
        <FrameLayout
            android:id="@+id/icViaje"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_chip_m3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_trips"
                app:tint="@color/m3_primary" />

        </FrameLayout>

        <!-- Información del viaje -->
        <TextView
            android:id="@+id/tvEscuela"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp"
            android:text="Escuela Primaria"
            android:textColor="@color/m3_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/badgeEstado"
            app:layout_constraintStart_toEndOf="@id/icViaje"
            app:layout_constraintTop_toTopOf="@id/icViaje" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:text="07:00 AM - 08:30 AM"
            android:textColor="@color/m3_on_surface_variant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icViaje"
            app:layout_constraintTop_toBottomOf="@id/tvEscuela" />

        <!-- Badge de estado -->
        <TextView
            android:id="@+id/badgeEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip_m3"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="Programado"
            android:textColor="@color/m3_on_primary_container"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/m3_outline_variant"
            app:layout_constraintTop_toBottomOf="@id/icViaje" />

        <!-- Detalles -->
        <LinearLayout
            android:id="@+id/detallesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <TextView
                android:id="@+id/tvTipoViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:text="Ida"
                android:textColor="@color/m3_on_surface_variant"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_arrow_forward"
                app:drawableTint="@color/m3_primary" />

            <TextView
                android:id="@+id/tvUnidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="6dp"
                android:text="Unidad 001"
                android:textColor="@color/m3_on_surface_variant"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_trips"
                app:drawableTint="@color/m3_primary" />

        </LinearLayout>

        <!-- Botón de acción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccion"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="Comenzar Viaje"
            android:textColor="@color/m3_on_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/m3_primary"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            app:iconTint="@color/m3_on_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detallesLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
