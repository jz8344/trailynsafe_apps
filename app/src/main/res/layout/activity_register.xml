<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    tools:context=".ui.auth.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <!-- Decorative Background Shape -->
    <View
        android:id="@+id/topShape"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradient_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
            <!-- Círculo decorativo superior izquierda -->
    <View
        android:id="@+id/circle1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="-40dp"
        android:elevation="2dp"
        android:alpha="0.08"
        android:background="@drawable/circle_shapes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Círculo decorativo medio derecha -->
    <View
        android:id="@+id/circle2"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="-50dp"
        android:elevation="2dp"
        android:alpha="0.1"
        android:background="@drawable/circle_shapes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Círculo decorativo inferior izquierda -->
    <View
        android:id="@+id/circle3"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="-80dp"
        android:elevation="2dp"
        android:alpha="0.09"
        android:background="@drawable/circle_shapes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="93dp"
            android:layout_height="99dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="45dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_logo"
                android:padding="8dp"
                android:src="@mipmap/logo" />
        </androidx.cardview.widget.CardView>        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/register_title"
            android:textColor="#058AFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoCard" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/register_subtitle"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <!-- Register Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/registerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="-30dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/topShape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Success Alert (Initially Hidden) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/successCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/success_light"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@color/success"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/success_icon"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/success" />

                        <TextView
                            android:id="@+id/tvSuccess"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/register_success"
                            android:textColor="@color/success"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Error Alert (Initially Hidden) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/errorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/error_light"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@color/error"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/error_icon"
                            android:src="@drawable/ic_error"
                            app:tint="@color/error" />

                        <TextView
                            android:id="@+id/tvError"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:textColor="@color/error"
                            android:textSize="14sp"
                            tools:text="Error message" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Name and Lastname Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- First Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNombre"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:hint="@string/nombre_hint"
                        app:boxBackgroundColor="@color/background_light"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeWidth="0dp"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Last Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilApellidos"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:hint="@string/apellidos_hint"
                        app:boxBackgroundColor="@color/background_light"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeWidth="0dp"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Phone Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelefono"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/telefono_hint"
                    app:boxBackgroundColor="@color/background_light"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/text_secondary"
                    app:prefixText="+52 "
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/email_hint"
                    app:boxBackgroundColor="@color/background_light"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/text_secondary"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/password_hint"
                    app:boxBackgroundColor="@color/background_light"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true"
                    app:helperText="@string/password_helper"
                    app:helperTextEnabled="true"
                    app:hintTextColor="@color/text_secondary"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/register_button"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/accent"
                    app:cornerRadius="29dp"
                    app:elevation="6dp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="end"
                    app:iconPadding="8dp" />

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/text_hint"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="O registrarse con"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/text_hint"
                        android:alpha="0.3" />
                </LinearLayout>

                <!-- Social Login Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Google Button -->
                    <ImageButton
                        android:id="@+id/btnGoogle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Google Login"
                        android:scaleType="fitCenter"
                        android:src="@drawable/google_logo" />

                </LinearLayout>

                <!-- Loading Progress (Initially Hidden) -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/accent"
                    app:trackCornerRadius="4dp"
                    app:trackThickness="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Login Link -->
        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/registerCard">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/login_icon"
                android:src="@drawable/ic_login"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/has_account_login"
                android:textColor="@color/primary"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>